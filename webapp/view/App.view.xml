<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:microchart="sap.suite.ui.microchart" xmlns="sap.m" controllerName="webapp.controller.App"
	data-sap-ui-bindingSyntax="complex" xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout">
	<App>
		<pages >
			<Page title="Projects Information" class="MainPage">
				<content>
					<Table id="myTable" class="tab" items="{ path : '/MYPROJECTSSet', parameters: { operationMode: 'Client' } }">
						<headerToolbar class="header">
							<Toolbar>
								<Button tooltip="View Settings" icon="sap-icon://drop-down-list" press="handleViewSettingsDialogButtonPressed"/>
								<ToolbarSpacer/>
								<SearchField width="30%" search="onFilterProducts"/>
							</Toolbar>
						</headerToolbar>
						<infoToolbar>
							<Toolbar id="vsdFilterBar" active="true" visible="false"
								press="[handleViewSettingsDialogFilterBarPressed, views.control.tableViewSettingsDialog]">
								<Label id="vsdFilterLabel" text="?"/>
							</Toolbar>
						</infoToolbar>
						<columns>
							<Column>
								<Text text="Project Name"/>
							</Column>
							<Column>
								<Text text="Description"/>
							</Column>
							<Column>
								<Text text="Status"/>
							</Column>
							<Column>
								<Text text="Chart"/>
							</Column>
							<Column>
								<Text text="Currency"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem >
								<cells class="col">
									<Text text="{MpId}"/>
									<Text text="{Description}"/>
									<Text text="{StatusDesc}"/>
									<microchart:DeltaMicroChart size="S" id="chart" value1="{path:'ActualData',type:'sap.ui.model.odata.type.Double'}"
										value2="{path:'PlannedData',type:'sap.ui.model.odata.type.Double'}" displayValue1="{path:'ActualData',formatter : '.formatter.delivery'}"
										displayValue2="{path:'PlannedData',formatter : '.formatter.delivery'}"
										deltaDisplayValue="{ parts: [ {path: 'ActualData'}, {path: 'PlannedData'} ], formatter : '.formatter1.getResult' }"
										color="{=(Math.abs(${ActualData} - ${PlannedData}))>50000?'Error':'Good'}" class="sapUiSmallMargin"/>
									<Text text="{Currency}"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>